{
  "name": "toolbox",
  "version": "1.0.2",
  "license": "MIT",
  "main": "dist-electron/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build  &&  electron-builder",
    "preview": "vite preview --port 5050",
    "build-win": "vue-tsc --noEmit && vite build  &&  electron-builder --win",
    "build-icon": "electron-icon-builder --input=./public/p.png --output=buildicon --flatten"
  },
  "build": {
    "appId": "app.toolbox.desktop", 
    "productName": "toolbox", 
    "files": [ 
      "dist-electron",
      "dist"
    ],
    "asar": true,
    "directories": {
      "output": "release"
    },
    "win": {
      "icon": "public/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}", 
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        "msi",
        "zip"
      ],
      "extraResources": {
        "from": "./engine/",
        "to": "./",
        "filter": [
          "**/*"
        ]
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ge-fei-fan",
        "host": "github.com",
        "repo": "toolbox"      
      }
    ]
  },
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "@icon-park/vue-next": "^1.3.6",
    "axios": "^0.26.0",
    "dayjs": "^1.10.8",
    "element-plus": "^2.3.6",
    "lodash": "^4.17.21",
    "pinia": "^2.0.11",
    "qrcode.vue": "^3.4.0",
    "swiper": "^8.0.6",
    "update-electron-app": "^2.0.1",
    "vue": "^3.2.31",
    "vue-router": "^4.0.12",
    "electron-updater": "^6.1.1"
  },
  "devDependencies": {
    "@electron-forge/publisher-github": "^6.2.1",
    "@types/lodash": "^4.14.179",
    "@types/lodash-es": "*",
    "@types/node": "^16.11.25",
    "@vitejs/plugin-vue": "^2.2.2",
    "@vitejs/plugin-vue-jsx": "^1.3.7",
    "@vue/tsconfig": "^0.1.3",
    "@vueuse/components": "^7.7.0",
    "@vueuse/core": "^7.7.0",
    "autoprefixer": "^10.4.2",
    "daisyui": "^3.0.25",
    "electron": "^24.3.1",
    "electron-builder": "^23.6.0",
    "electron-icon-builder": "^2.0.1",
    "electron-is": "^3.0.0",
    "electron-log": "^4.4.8",
    "electron-updater": "^6.1.1",
    "postcss": "^8.4.7",
    "sass": "^1.49.9",
    "tailwindcss": "^3.0.23",
    "typescript": "~4.5.5",
    "unplugin-auto-import": "^0.6.1",
    "unplugin-vue-components": "^0.17.21",
    "vite": "^2.8.4",
    "vite-plugin-electron": "^0.11.2",
    "vite-plugin-electron-renderer": "^0.14.1",
    "vue-tsc": "^0.31.4",
    "yaml": "^2.3.1"
  }
}
